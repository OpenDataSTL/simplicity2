{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
        "source": "/login",
        "destination": "/login.html"
      },
      {
      "source": "**",
      "destination": "/index.html"
      }
    ]
  }
}
